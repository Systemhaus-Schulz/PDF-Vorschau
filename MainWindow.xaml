<Window x:Class="PDF_Vorschau.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="PDF-Vorschau"
        Height="720"
        Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="#1E1E1E"
        KeyDown="Window_KeyDown">

    <Grid>

        <!-- Hauptoberfläche -->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <!-- benannte Zeile, damit wir die Höhe im Code ändern können -->
                <RowDefinition x:Name="ThumbRow" Height="180" />
            </Grid.RowDefinitions>

            <!-- Header -->
            <DockPanel Grid.Row="0" Background="#2D2D30">
                <StackPanel Orientation="Horizontal"
                            VerticalAlignment="Center"
                            Margin="12,6">
                    <TextBlock Text="📁 Ordner:"
                               Foreground="White"
                               FontSize="14"
                               Margin="0,0,8,0"/>
                    <TextBox x:Name="FolderPathTextBox"
                             Width="420"
                             Height="28"
                             Margin="0,0,12,0"
                             Padding="4"
                             Background="#3A3A3D"
                             Foreground="White"
                             BorderBrush="#555"/>
                    <Button Content="Durchsuchen"
                            Width="110"
                            Height="28"
                            Margin="0"
                            Click="BrowseFolder_Click"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal"
                            VerticalAlignment="Center"
                            Margin="12,6"
                            DockPanel.Dock="Right">
                    <CheckBox x:Name="ToggleThumbs"
                              Content="Mehrseiten-Vorschau"
                              Foreground="White"
                              VerticalAlignment="Center"
                              IsChecked="True"
                              Margin="0,0,16,0"
                              Checked="ToggleThumbs_Checked"
                              Unchecked="ToggleThumbs_Checked" />
                </StackPanel>
            </DockPanel>

            <!-- Hauptbereich -->
            <Grid Grid.Row="1" Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="260" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Dateiliste -->
                <Border Background="#252526"
                        CornerRadius="6"
                        Padding="4"
                        Margin="0,0,10,0">
                    <ListBox x:Name="PdfListBox"
                             Background="#252526"
                             Foreground="White"
                             BorderThickness="0"
                             MouseDoubleClick="PdfListBox_MouseDoubleClick"
                             SelectionChanged="PdfListBox_SelectionChanged"
                             KeyDown="PdfListBox_KeyDown" />
                </Border>

                <!-- PDF Vorschau -->
                <Border Grid.Column="1"
                        Background="#1E1E1E"
                        CornerRadius="6"
                        Padding="10">
                    <ScrollViewer VerticalScrollBarVisibility="Auto"
                                  HorizontalScrollBarVisibility="Auto">
                        <Image x:Name="PreviewImage"
                               Stretch="Uniform"
                               RenderOptions.BitmapScalingMode="HighQuality"
                               Focusable="True"
                               MouseWheel="PreviewImage_MouseWheel"/>
                    </ScrollViewer>
                </Border>
            </Grid>

            <!-- Mehrseiten-Thumbnail Leiste -->
            <Border x:Name="ThumbBarContainer"
                    Grid.Row="2"
                    Background="#252526"
                    CornerRadius="6"
                    Padding="8"
                    Margin="10,0,10,10">
                <ScrollViewer HorizontalScrollBarVisibility="Auto"
                              VerticalScrollBarVisibility="Disabled">
                    <StackPanel x:Name="ThumbPanel"
                                Orientation="Horizontal" />
                </ScrollViewer>
            </Border>

        </Grid>
    </Grid>
</Window>
