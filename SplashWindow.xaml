<Window x:Class="PDF_Vorschau.SplashWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Frohe Weihnachten"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Width="480"
        Height="260"
        Background="#050B0A"
        AllowsTransparency="True"
        ShowInTaskbar="False"
        Topmost="True">

    <Border CornerRadius="16"
            Background="#111827"
            BorderBrush="#FBBF24"
            BorderThickness="2"
            Padding="16">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="🎄 Frohe Weihnachten 🎄"
                           Foreground="White"
                           FontSize="26"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"/>

                <TextBlock Text="wünscht dir dein PDF-Vorschau-Tool"
                           Foreground="#D1D5DB"
                           FontSize="14"
                           HorizontalAlignment="Center"
                           Margin="0,4,0,0"/>

                <TextBlock Text="Systemhaus Schulz Edition"
                           Foreground="#FBBF24"
                           FontSize="13"
                           HorizontalAlignment="Center"
                           Margin="0,4,0,0"/>

                <TextBlock Text="Das Programm startet gleich..."
                           Foreground="#9CA3AF"
                           FontSize="12"
                           HorizontalAlignment="Center"
                           Margin="0,16,0,0"/>
            </StackPanel>

            <StackPanel Grid.Row="1"
                        Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="0,10,0,0">

                <ProgressBar x:Name="ProgressBar"
                             Width="260"
                             Height="10"
                             Minimum="0"
                             Maximum="100"
                             Value="0"
                             Foreground="#FBBF24"
                             Background="#020617"/>

                <Button Content="Jetzt starten"
                        Padding="10,4"
                        Margin="12,0,0,0"
                        Click="StartButton_Click"/>
            </StackPanel>

        </Grid>
    </Border>
</Window>
